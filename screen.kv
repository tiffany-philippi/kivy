<TasksList>:
    BoxLayout:
        id: box
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height

<Task>:
    size_hint_y: None
    height: 200
    Label:
        id: label_task
        font_size: 21
    Button:
        text: "X"
        size_hint_x: None
        width: 60
        on_release: app.root.ids.box.remove_widget(root)