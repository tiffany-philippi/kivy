<Manager>:
    Menu:
        name: 'menu'
    TasksList:
        name: 'tasks'

<Menu>:
    BoxLayout:
        orientation: 'vertical'
        padding: 200
        spacing: 50
        Image:
            source: 'note.png'
            size_hint_y: None
            height: 300
            allow_stretch: True
        Button:
            text: "Tasks"
            on_release: app.root.current = 'tasks'
        Button:
            text: "Help"
        Button:
            text: "Log out"
            on_release: app.stop()

<TasksList>:
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            ActionView:
                ActionPrevious:
                    title: 'Tasks'
                    on_release: app.root.current = 'menu'
                ActionButton: 
                    text: 'Log out'
                    on_release: app.stop()
                ActionButton: 
                    text: 'Menu'
                    on_release: app.root.current = 'menu'

        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: task_input
            Button:
                text: '+'
                size_hint_x: None
                width: 60
                on_release: root.addWidget()

<Task>:
    size_hint_y: None
    height: 200
    Label:
        id: label_task 
        font_size: 21
    Button:
        text: "X"
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('tasks').ids.box.remove_widget(root)
