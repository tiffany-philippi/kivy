<Manager>:
    Screen:
        Button:
            text: "See tasks"
            on_release: root.current = 'tasks'
    TasksList:
        name: 'tasks'

<TasksList>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            BoxLayout:
                id: box
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
        BoxLayout:
            size_hint_y: None
            height: 60
            TextInput:
                id: task_input
            Button:
                text: '+'
                size_hint_x: None
                width: 60
                on_release: root.addWidget()

<Task>:
    size_hint_y: None
    height: 200
    Label:
        id: label_task 
        font_size: 21
    Button:
        text: "X"
        size_hint_x: None
        width: 60
        on_release: app.root.get_screen('tasks').ids.box.remove_widget(root)
